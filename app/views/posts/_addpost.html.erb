<div class="container">
  <% if @post.errors.any? %>
    <% @post.errors.full_messages.each do |error| %>
      <p class="alert alert-warning"><strong><%= error %></strong></p>
    <% end %>
  <% end %>

  <%= form_for @post do |f| %>
    <div class="form-group">
      <%= f.label :title %>
      <%= f.text_field :title, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :content %>
      <%= f.text_area :content, size: "60x12", class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :created_by %>
      <%= f.text_field :created_by, size: "60x12", class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label "Post Key" %>
      <%= f.password_field :postkey, class: "form-control" %>
    </div>

    <div class="">
      <%= f.submit class: "btn btn-primary" %>
    </div>
  <% end %>
</div>
