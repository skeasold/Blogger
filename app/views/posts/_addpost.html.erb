<%= form_for @post do |f| %>
  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :content %>
    <%= f.text_area :content, size: "60x12", class: "form-control" %>
  </div>

  <div class="">
    <%= f.submit class: "btn btn-primary" %>
  </div>
<% end %>
