<div class="container title_wrapper">
  <div class="row">
    <div class="col-md-8 title text-left">
      <h1>Inside the Ipsums</h1>
    </div>
    <div class="col-md-4 text-right navbutton">
      <%= link_to "New Blog Post", new_post_path, :class => "btn btn-success" %>
    </div>
  </div>
</div>
<div class="container posts_wrapper">
  <% if @posts.empty? %>
    <p class="bg-warning noposts">The Ipsums have not created any blog posts.</p>
  <% end %>
  <% @posts.each do |post| %>
    <div class="row">
      <h3><%= link_to "#{post.title}", post_path(id: post.id) %></h3>
      <hr>
    </div>
    <div class="row">
      <blockquote>
        <%= post.content %>
        <footer>By <%= post.created_by %> @ <%= post.created_at %></footer>
      </blockquote>
    </div>
  <% end %>
</div>
<%= render partial: 'footer' %>
