<div class="container">
  <h1>Blog Posts</h1>

<table class="table">
  <thead>
    <tr>
      <th>
        Title
      </th>
      <th>
        Content
      </th>
      <th>
        Created At
      </th>
    </tr>
  </thead>
  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td>
          <%= post.title %>
        </td>
        <td>
          <%= post.content %>
        </td>
        <td>
          <%= post.created_at %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
