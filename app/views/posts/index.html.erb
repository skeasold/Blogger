<div class="container">
  <div class="row">
    <div class="col-md-10">
      <h1>Blog Posts</h1>
    </div>
    <div class="col-md-2 header_nav">
      <%= link_to "New Blog Post", new_post_path, :class => "btn btn-success" %>
    </div>
  </div>

<table class="table">
  <thead>
    <tr>
      <th>
        Title
      </th>
      <th>
        Content
      </th>
      <th>
        Created At
      </th>
    </tr>
  </thead>
  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td>
          <%= post.title %>
        </td>
        <td>
          <%= post.content %>
        </td>
        <td>
          <%= post.created_at %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
